<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/customborder">


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/act_list_img_width"
        android:layout_height="@dimen/act_list_img_height"
        android:padding="@dimen/act_list_img_pad"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/act_list_holder_pad_right"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingLeft="@dimen/act_list_title_pad_left"
            android:paddingRight="@dimen/act_list_title_pad_right"
            android:textColor="@color/white"
            android:textSize="@dimen/act_list_title_text_size" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="@dimen/act_list_subtitle_pad_lft"
            android:paddingTop="@dimen/act_list_subtitle_pad_top"
            android:paddingRight="@dimen/act_list_subtitle_pad_right"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>